{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard",
    "ivweb"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-unused-vars": [
      "warn"
    ],
    "no-var": [
      "off"
    ],
    "one-var": [
      "off"
    ],
    "indent": [
      "error",
      2
    ],
    "no-cond-assign": [
      "error",
      "always"
    ],
    // disable
    "init-declarations": "off",
    "no-console": "off",
    "no-inline-comments": "off"
  }
}
